{
  "manifest_version": 3,
  "name": "Learning Engagement Tracker",
  "version": "1.0.0",
  "description": "Track and improve your engagement while learning online",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "*://*.pw.live/*",
    "*://*.youtube.com/*", 
    "*://*.coursera.org/*",
    "*://*.udemy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}